# Environment Variables Template
# Copy this to .env for local development or set these in your hosting platform

# Database Configuration
DATABASE_URL=sqlite:///instance/app.db
# For PostgreSQL: postgresql://username:password@host:port/database
# For Railway PostgreSQL: ${{ Postgres.DATABASE_URL }}
# For Render PostgreSQL: ${{ DATABASE_URL }}

# Security
SESSION_SECRET=your-super-secret-key-change-this-in-production

# Flask Environment
FLASK_ENV=development
# Set to 'production' for deployment

# Port Configuration
PORT=5000
# Railway and Render will auto-assign PORT